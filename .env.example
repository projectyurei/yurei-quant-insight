# Yurei Quant Insight Configuration
# Copy this file to .env and fill in your values

# PostgreSQL connection string (asyncpg driver)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/yurei_db

# Analysis loop interval in seconds
ANALYSIS_INTERVAL_SECONDS=30

# Lookback window for data fetching (minutes)
LOOKBACK_MINUTES=20

# Volume spike detection threshold (percentage)
VOLUME_SPIKE_THRESHOLD=300

# Whale detection threshold (SOL amount)
WHALE_SOL_THRESHOLD=10.0

# First minutes window for whale detection
WHALE_FIRST_MINUTES=5
